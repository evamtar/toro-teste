@using PatrimonioPortal.Models;
@model LoginModel
@{
    ViewData["Title"] = "Index";
}
@section Style{ 
    <style>
        body {
          margin: 0;
          padding: 0;
          background-color: #17a2b8;
          height: 100vh;
        }
        #login .container #login-row #login-column #login-box {
          margin-top: 120px;
          max-width: 600px;
          height: 320px;
          border: 1px solid #9C9C9C;
          background-color: #EAEAEA;
        }
        #login .container #login-row #login-column #login-box #login-form {
          padding: 20px;
        }
        #login .container #login-row #login-column #login-box #login-form #register-link {
          margin-top: -85px;
        }
    </style >
}
<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form class="form" method="post" asp-controller="Login" asp-antiforgery="true" asp-action="Autenticar">
                        <h3 class="text-center text-info"> Portal</h3>
                        <div class="form-group">
                            <label for="txtUsuario" class="text-info"> Usuário:</label> <br>
                            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @id = "txtUsuario" })
                        </div>
                        <div class="form-group">
                            <label for="txtSenha" class="text-info"> Senha:</label> <br>
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @id = "txtSenha" })
                        </div>
                        <div class="form-group">
                            <input type="submit" id="btnLogin" name="btnLogin" class="btn btn-info btn-md" value="Entrar">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

